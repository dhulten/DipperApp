<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dipper.ViewHistoryActivity">


    <FrameLayout
        android:layout_width="386dp"
        android:layout_height="514dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundimage_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lastCheckin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/darkBlue"
                android:text="Last Check-in:"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="34sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/checkin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lastCheckin"
                android:layout_marginTop="22dp"
                android:background="@color/darkBlue"
                android:text=""
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/previousCheckins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkin1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/darkBlue"
                android:text="Previous Check-ins:"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/checkin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/previousCheckins"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/darkBlue"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/checkin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/checkin2"
                android:layout_below="@+id/checkin2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/darkBlue"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/checkin4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkin3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/darkBlue"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/checkin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkin4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@color/darkBlue"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="30sp" />

        </RelativeLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
